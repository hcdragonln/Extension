{
  "manifest_version": 3,
  "name": "Add Subtitle",
  "version": "1.0",
  "description": "Chọn file .srt/.vtt trong popup, gắn phụ đề vào video của trang hiện tại.",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
